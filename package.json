{
  "name": "odyssey",
  "author": "Okta, Inc.",
  "license": "Apache-2.0",
  "private": true,
  "packageManager": "yarn@4.9.1",
  "workspaces": [
    "packages/**/*"
  ],
  "engines": {
    "yarn": "^4.6.0",
    "node": "<=20"
  },
  "scripts": {
    "build": "yarn workspaces foreach --all --topological-dev --parallel --interlaced --exclude=@okta/odyssey-icons --exclude=@okta/odyssey-storybook run build",
    "create-contribution": "ok-ui create-package --type component-library --dir $(pwd)/packages/contributions/${name} --name '@okta/odyssey-contribution-${name}'",
    "eslint": "eslint .",
    "generate:i18n": "yarn workspace @okta/odyssey-cli build && yarn workspaces foreach --all run generate:i18n",
    "generate:icons": "yarn workspace @okta/odyssey-icons build && yarn workspace @okta/odyssey-react-mui generate:icons",
    "generate:pseudoLocales": "yarn workspaces foreach --all --parallel run generate:pseudoLocales",
    "lerna-publish": "lerna publish from-package --no-verify-registry --no-push --force-publish --ignore-changes 'packages/contributions/**'",
    "lerna-version": "lerna version --no-git-tag-version --include-merged-tags --conventional-commits --no-push --force-publish --ignore-changes 'packages/contributions/**'",
    "lint:fix": "HAS_SORTING=true yarn run eslint --fix",
    "lint": "yarn eslint && yarn prettier-check",
    "playwright-install": "yarn workspaces foreach --all run playwright-install",
    "postinstall": "yarn build && [ -z ${CI:-} ] && husky install || exit 0",
    "prettier-check": "prettier --ignore-unknown --log-level warn --check .",
    "prettier-write": "prettier --ignore-unknown --log-level warn --write .",
    "start:dev": "yarn workspaces foreach --all --parallel --interlaced --exclude=@okta/odyssey-icons --exclude=@okta/odyssey-storybook run dev",
    "start:storybook": "yarn workspace @okta/odyssey-storybook start",
    "start": "yarn install && yarn build && yarn concurrently npm:start:dev npm:start:storybook",
    "test": "yarn workspaces foreach --all --parallel --interlaced run test",
    "topic": "OKTA_NPM_REGISTRY_SERVER=https://artifacts.aue1e.internal:443/artifactory/api/npm/npm-okta-all yarn",
    "typecheck": "yarn workspaces foreach --all --parallel --interlaced run typecheck"
  },
  "devDependencies": {
    "@okta/odyssey-cli": "workspace:*",
    "@okta/odyssey-eslint-config": "workspace:*",
    "@okta/odyssey-storybook": "workspace:^",
