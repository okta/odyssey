{
  "extends": "@okta/odyssey-typescript/tsconfig.react.json",
  "compilerOptions": {
    "composite": true,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "noEmit": false,
    "outDir": "dist",
    "sourceMap": true,
    "types": ["vitest/globals"]
  },
  "include": ["*", "./src/**/*", "./scripts/**/*"],
  "exclude": ["**/dist/**/*"]
}
