      "dark": {
        "value": "{odyssey.color.green.9}"
      },
      "contrastText": {
        "value": "{palette.text.inverse}"
      }
    },
    "grey": {
      // Our token here could be `neutral` and simply map to MUI's `grey`
      "0": {
        // This value is missing from MUI, but could be used in place of `common.white`
        "value": "{odyssey.color.neutral.0}"
      },
      "50": {
        "value": "{odyssey.color.neutral.50}"
      },
      "100": {
