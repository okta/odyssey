    "text": {
      "primary": {
        "value": "{palette.neutral.900}", 
        "comment": "For headings and body text"},
      "secondary": {
        "value": "{palette.neutral.700}", 
        "comment": "For supporting or secondary text"},
      "inverse": {
        "value": "{palette.neutral.0}", 
        "comment": "For text use on dark elements"},
      "disabled": {
        "value": "{palette.neutral.600}", 
        "comment": "For disabled text"},
      "error": {
        "value": "{palette.error.main}"
      }
    },
    "background": {
      // Renaming "main" to "default" to match MUI
      "default": {
        "value": "{palette.neutral.000}", 
        "comment": "For use in page or frame backgrounds"},
      "overlay": {
        "value": "240, 6, 12, 0.5", 
        "comment": "Use to obscure layers behind dialogs or popups"
      }
      // MUI expects a "paper" background token as well
      // The <Paper> component is used for surface backgrounds like <Card>
    },
    "surface": {
      // Propose removing these, since application is component-specific
      // "neutral-subtle": {"value": "color-neutral-1"},
      // "dark": {"value": "color-neutral-10", "comment": "For use in dark surfaces such as Tooltip"},
      // "error-subtle": {"value": "color-red-1", "comment": "For use as a subtle surface color on error components such as Toast"},
      // "warning-subtle": {"value": "color-yellow-1", "comment": "For use as a subtle surface color on warning components such as Toast"},
      // "info-subtle": {"value": "color-blue-1"},
      // "success-subtle": {"value": "color-green-1", "comment": "For use as a subtle surface color on success components such as Toast"}
    },
