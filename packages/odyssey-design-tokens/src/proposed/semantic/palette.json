    // End MUI Palette
    "interactive": {
      // This is possibly duplicative of "primary" above,
      // which tends to be our "interactive" token.
      // Info also uses these values, but could just as easily be
      // separated from "interactive/primary"
      "main": {
        "value": "{odyssey.color.blue.6}", 
        "comments": "For use as main brand color in interactive components such as buttons, links, checkboxes, radio buttons and tabs"
      },
      "hover": {
        "value": "{odyssey.color.blue.9}", 
